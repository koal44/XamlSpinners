<Window x:Class="Shapes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Shapes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <DockPanel>
        <ComboBox x:Name="userControlComboBox" HorizontalAlignment="Left" Width="200" Margin="20"
                  DockPanel.Dock="Top"
                  SelectionChanged="UserControlComboBox_SelectionChanged">
            <ComboBoxItem Content="Ellipse" />
            <ComboBoxItem Content="SegmentedEllipse" />
            <!--  More ComboBoxItems for each UserControl  -->
        </ComboBox>

        <ContentControl x:Name="userControlViewArea" />
    </DockPanel>
</Window>
